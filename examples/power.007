@tighter(infix:<*>)
@assoc("right")
func infix:<**>(x, n) {
    if n == 0 {
        return 1;
    }
    my qr = n divmod 2;
    my q = qr[0];
    my r = qr[1];
    my xs = x * x;
    if r {
        return x * xs ** q;
    }
    return xs ** q;
}

say(2 ** 3);        # 8
say(3 ** 2);        # 9
say(100 ** 0);      # 1
say(42 ** 1);       # 42
say(2 ** 2 ** 3);   # 256, not 64 (right-associative)
